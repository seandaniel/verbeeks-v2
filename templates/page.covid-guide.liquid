    <h1>{{page.title}}</h1>
  </div>
</div>
<div class="wrapper">
  <section class="covid-text-img-container">
    <div class="covid-text-container">
      <div class="content">
        {{ page.content }}
      </div>
      <a class="button-reverse" href="/contact"><i class="fas fa-envelope"></i>Contact</a>
    </div>
