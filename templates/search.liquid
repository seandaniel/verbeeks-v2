{% paginate search.results by 24 %}

  <div class="h1-container">
    <div class="wrapper">
      <p class="search-terms special-p">{{ search.terms }}</h1>
    </div>
  </div>
  
{% if search.performed %}

  {% if search.results_count != 0 %}

  <div class="wrapper">
    {% if search.results_count == 1 %} 
    <h2 class="search-h2">{{ search.results_count }} Result Found</h2>
    {% else %}
    <h2 class="search-h2">{{ search.results_count }} Results Found</h2>
    {% endif %}
      <section class="home-products-container">
        {% for item in search.results %}
          <div class="product-container">
            <a class="product-img" href="{{ item.url }}"><img src="{{ item.featured_image | img_url: 'master'}}"
                alt="{{ item.title}}"></a>
            {% unless item.available %}<p class="sold-out">Sold Out!</p>{% endunless %}
            <h2>{{ item.title }}</h2>
            <div class="product-button-container">
            {% if item.compare_at_price_max > item.price %}
              <div class="prices-container">
                <p>{{ item.price | money}} CAD</p>
                <p>{{ item.compare_at_price_max | money}}</p>
              </div>
            {% else %}
              <p>{{ item.price | money}} CAD</p>
            {% endif %}
              <a href="{{ item.url }}" class="button-reverse product-button"><i class="fas fa-arrow-right"></i></a>
            </div>
          </div>
        {% endfor %}
      </section>
  </div>
  
  {% else %}

    <div class="wrapper">
      <section class="container-404">
        <h2>We don't have that item. <a href="/pages/contact">Message us,</a> we may have it in store.</h2>
        <img src="{{ 'store-front.jpeg' | asset_url }}" alt="{{ img.alt }}">
      </section>
    </div>

  {% endif %}

{% endif %}

{% if paginate.pages > 1 %}
  <div class="wrapper">
    <div class="paginate-container">
        {{ paginate | default_pagination }}
      {% endif %}
    </div>
  </div>
{% endpaginate %}