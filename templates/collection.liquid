{% paginate collection.products by 16 %}

  <div class="h1-container">
    <div class="wrapper">
      <h1>{{ collection.title}}</h1>
    </div>
  </div>

  {% if collection.all_products_count != 0 %}
    <div class="wrapper">
      <section class="home-products-container">

      {% for product in collection.products %}

        <div class="product-container">
          <a class="product-img" href="{{ product.url }}"><img src="{{ product.featured_image | img_url: 'master'}}"
              alt="{{ product.title}}"></a>
          <h2>{{ product.title }}</h2>
          <div class="product-button-container">
            <p>{{ product.price | money}}</p>
            <a href="{{ product.url }}" class="button-reverse product-button"><i class="fas fa-arrow-right"></i></a>
          </div>
        </div>
      {% endfor %}
    </section>
  </div>

    {% else %}

      <div class="wrapper">
        <section class="container-404">
          <h2>We don't have any items in that collection right now. <a href="/pages/contact">Message us,</a> we may have it in store.</h2>
          <img src="{{ 'store-front.jpeg' | asset_url }}" alt="{{ img.alt }}">
        </section>
      </div>
      
    {% endif %}

{% if paginate.pages > 1 %}
  <div class="wrapper">
    <div class="paginate-container">
        {{ paginate | default_pagination }}
      {% endif %}
    </div>
  </div>
{% endpaginate %}
