{%- comment -%}
  This is a required section for the Shopify Theme Store.
  It is available in the "Header" section in the theme editor.

  Theme Store required settings
  - Show announcement
  - Text: message to announce
  - Link: link of the announcement bar

  Theme Store optional settings
  - Home page only: only shows on the home page
{%- endcomment -%}
<section data-section-id="{{ section.id }}" data-section-type="header">

  <nav class="mobile-nav">
    <ul>
      <li><button title="Close Navigation" aria-label="Close Navigation" class="exit-nav"><i class="fas fa-times-circle"></i></butto></li>
    {%- for link in linklists.mobile-menu.links -%}
      <li>
        <a href="{{ link.url }}" {% if link.active %}aria-current="page" {% endif %}>
          {{ link.title }}
        </a>
      </li>
    {% endfor %}
    </ul>
    <img src="{{ 'logo.png' | asset_url }}" alt="The letter V with a leaf on the end" loading="lazy">
  </nav>

  <header role="banner">
    <nav class="secondary-nav">
      <ul>
        <li><i class="fab fa-canadian-maple-leaf"></i><a href="{{ section.settings.call_to_action }}">{{ section.settings.call_to_action_text }}</a></li>
        <li>
          <form action="/search" method="get" role="search">
            <i class="fas fa-search"></i>
            <input type="hidden" name="type" value="product" />
            <input type="hidden" name="options[prefix]" value="last">
            <input class="search" type="search" name="q" value="{{ search.terms | escape }}" placeholder="Search products">
          </form>
        </li>
        <li><a title="Home" aria-label="Home" href="/" class="button"><i class="fas fa-home"></i></a></li>
          {% if cart.item_count != 0 %}
          <li><a title="View Cart" aria-label="View Cart" class="button" href="/cart"><i class="fas fa-shopping-cart"></i>{{ cart.item_count}}</a></li>
         {% else %}
          <li><a title="View Cart" aria-label="View Cart" class="button" href="/cart"><i class="fas fa-shopping-cart no-right"></i></a></li>
         {% endif %}
      </ul>  
    </nav>

    <nav class="primary-nav">
      <div class="wrapper">
        <ul class="primary-ul">
          <li class="desktop-h1">
            <h1>
              <a title="Home" aria-label="Home" href="/">
                <img src="{{ 'logo.png' | asset_url }}" alt="Verbeek's Farm & Garden Centre" loading="lazy">
              </a>
            </h1>
          </li>
          <li class="mobile-h1">
            <a title="Home" aria-label="Home" href="/">
              <h1>Verbeek's<i class="fab fa-envira"></i></h1>
            </a>
          </li>
          <li class="align-right">
            <button title="Open Navigation" aria-label="Close Navigation" class="open-nav">
              <i class="fas fa-align-right"></i>
            </button>
          </li>
          {%- for link in linklists.main-menu.links -%}
                <li class="primary">
                  <a href="{{ link.url }}" {% if link.active %}aria-current="page"{% endif %}>
                    {{ link.title }}
                  </a>

                  {%- if link.links != blank -%}
                    <ul class="dropdown-ul">
                      {%- for child_link in link.links -%}
                        <li>
                          <a href="{{ child_link.url }}" {% if child_link.active %}aria-current="page"{% endif %}>
                            {{ child_link.title }}
                          </a>

                          {%- if child_link.links != blank -%}
                            <ul class="dropdown-ul-2">
                              {%- for grandchild_link in child_link.links -%}
                                <li>
                                  <a href="{{ grandchild_link.url }}" {% if grandchild_link.active %}aria-current="page"{% endif %}>
                                    {{ grandchild_link.title }}
                                  </a>
                                </li>
                              {%- endfor -%}
                            </ul>
                          {%- endif -%}

                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}

                </li>
          {%- endfor -%}
        </ul>
      </div>
    </nav>
  </header>
</section>
  
{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "header",
        "content": "Header"
      },
      {
        "type": "url",
        "id": "call_to_action",
        "label": "Call To Action Link"
      },
      {
        "type": "text",
        "id": "call_to_action_text",
        "label": "Call To Action Text"
      },
      {
        "type": "link_list",
        "id": "main_menu",
        "label": "Deskop Menu"
      },
      {
        "type": "link_list",
        "id": "mobile_menu",
        "label": "Mobile Menu"
      }
    ]
  }
{% endschema %}

