<footer>
  <div class="wrapper">
    <div class="nav-container">
      <nav>
        <h2>{{ section.settings.footer_links_heading_1 }}</h2>
        {%- assign footer_links_1_linklist = section.settings.footer_links_1_linklist -%}
        {% if linklists[footer_links_1_linklist].links.size > 0 %}
        <ul class="links-footer-ul">
          {% for link in linklists[footer_links_1_linklist].links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </nav>
      {% endif %}
      <nav>
        <h2>{{ section.settings.footer_links_heading_2 }}</h2>
        {%- assign footer_links_2_linklist = section.settings.footer_links_2_linklist -%}
        {% if linklists[footer_links_2_linklist].links.size > 0 %}
        <ul class="links-footer-ul">
          {% for link in linklists[footer_links_2_linklist].links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </nav>
      {% endif %}
    </div>
    <div class="hours-logo-container">
      <div class="hours-number-container">
        <h2>{{ section.settings.hours_heading }}</h2>
        <p>{{ section.settings.company_hours_1 }}</p>
        <p>{{ section.settings.company_hours_2 }}</p>
        <a href="{{ section.settings.company_number }}"><i class="fas fa-phone"></i>{{ section.settings.company_number_text }}</a>
      </div>
      <div class="img-copyright-container">
        <img src="{{ section.settings.footer_img | img_url: 'master' }}" alt="{{ img.alt }}">
        <p>{{ section.settings.company_copyright }} </p>
      </div>
    </div>
  </div>
  <nav class="social-footer-nav">
    {%- assign footer_social_linklist = section.settings.footer_social_linklist -%}
    {% if linklists[footer_social_linklist].links.size > 0 %}
    <ul class="social-footer-ul">
      {% for link in linklists[footer_social_linklist].links %}
      <li><a href="{{ link.url }}">{{ link.title }}</a></li>
      {% endfor %}
    </ul>
  </nav>
  {% endif %}
</footer>
  
{% schema %}
    {
      "name": "Footer",
      "settings": [
        {
          "type": "text",
          "id": "footer_links_heading_1",
          "label": "Footer Links Heading 1",
          "default": "footer"
        },
        {
          "type": "link_list",
          "id": "footer_links_1_linklist",
          "label": "Footer Links Menu 1",
          "default": "footer"
        },
        {
          "type": "text",
          "id": "footer_links_heading_2",
          "label": "Footer Links Heading 2",
          "default": "footer"
        },
        {
          "type": "link_list",
          "id": "footer_links_2_linklist",
          "label": "Footer Links Menu 2",
          "default": "footer"
        },
        {
          "type": "text",
          "id": "hours_heading",
          "label": "Hours heading"
        },
        {
          "type": "text",
          "id": "company_hours_1",
          "label": "Company's hours"
        },
        {
          "type": "text",
          "id": "company_hours_2",
          "label": "Company's hours"
        },
        {
          "type": "url",
          "id": "company_number",
          "label": "Company's phone number"
        },
        {
          "type": "text",
          "id": "company_number_text",
          "label": "Company's phone number text"
        },
        {
          "type": "image_picker",
          "id": "footer_img",
          "label": "Company's Logo"
        },
        {
          "type": "text",
          "id": "company_copyright",
          "label": "Company's Copyright"
        },
        {
          "type": "link_list",
          "id": "footer_social_linklist",
          "label": "Footer social menu",
          "default": "footer"
        }
      ]
    }
  
  {% endschema %}
