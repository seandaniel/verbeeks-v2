<div class="wrapper">
  <section class="quad-collections">
    <div class="quad-collections-container">
    {%- assign collection = collections[section.settings.collection_1] -%}
      <div class="quad-collection quad-collection-1" style="background-image: url({{collection.image | img_url: 'master'}})">
        <div class="collection-button-container">
          {% if section.settings.title_1 != blank %}
            <h2 class="featured-collection__title">{{ section.settings.title_1 | escape }}</h2>
          {% endif %}
          {% if section.settings.link_1 != blank %}
