<div class="wrapper">
  <section class="secondary-collection-container">

  {%- assign collection = collections[section.settings.collection_1] -%}
    <div class="secondary-collection collection-1-before" style="background-image: url({{collection.image |img_url: 'master'}})">
      <div class="collection-button-container">
        {% if section.settings.title_1 != blank %}
          <h2 class="featured-collection__title">{{ section.settings.title_1 | escape }}</h2>
        {% endif %}

        {% if section.settings.link_1 != blank %}
          <a class="button" href="{{section.settings.link_1}}">{{section.settings.link_text_1}}</a>
        {% endif %}
      </div>
    </div>
    
  {%- assign collection = collections[section.settings.collection_2] -%}
    <div class="secondary-collection collection-2-before" style="background-image: url({{collection.image |img_url: 'master'}})">
      <div class="collection-button-container">
        {% if section.settings.title_2 != blank %}
          <h2 class="featured-collection__title">{{ section.settings.title_2 | escape }}</h2>
        {% endif %}

        {% if section.settings.link_2 != blank %}
          <a class="button" href="{{section.settings.link_2}}">{{section.settings.link_text_2}}</a>
        {% endif %}
      </div>
    </divg>

  </section>
</div>

{% schema %}
  {
    "name": "Secondary collections",
    "settings": [
      {
        "type": "text",
        "id": "title_1",
        "label": "Heading 1",
        "default": "Secondary Collection 1"
      },
      {
        "id": "collection_1",
        "type": "collection",
        "label": "Collection 1"
      },
      {
        "type": "url",
        "id": "link_1",
        "label": "Link 1"
      },
      {
        "type": "text",
        "id": "link_text_1",
        "label": "Link Text 1"
      },
      {
        "type": "text",
        "id": "title_2",
        "label": "Heading 2",
        "default": "Secondary Collection 2"
      },
      {
        "id": "collection_2",
        "type": "collection",
        "label": "Collection 2"
      },
      {
        "type": "url",
        "id": "link_2",
        "label": "Link 2"
      },
      {
        "type": "text",
        "id": "link_text_2",
        "label": "Link Text 2"
      }
    ],
    "presets": [
      {
        "name": "Secondary Collections",
        "category": "Collection"
      }
    ]
  }
{% endschema %}
