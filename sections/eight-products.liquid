<div class="h1-container">
  <div class="wrapper">
    <h1>{{ section.settings.eight_heading }}</h1>
  </div>
</div>
<div class="wrapper">
  <section class="eight-products-container">
    {%- assign collection = collections[section.settings.eight_collection] -%}

    {% for product in collection.products limit:8 %}
      <div class="product-container">
        <a class="product-img" href="{{ product.url }}"><img src="{{ product.featured_image | img_url: 'master'}}" alt="{{ product.title}}"></a>
        <h2>{{ product.title }}</h2>
        <div class="product-button-container">
          <p>{{ product.price | money}}</p>
          <a href="{{ product.url }}" class="button-reverse product-button"><i class="fas fa-arrow-right"></i></a>
        </div>
      </div>
    {% endfor %}

  </section>
</div>


{% schema %}
  {
    "name": "Eight Products",
    "settings": [
      {
        "type": "text",
        "id": "eight_heading",
        "label": "Eight Products Collection Heading",
        "default": "Popular"
      },
      {
        "id": "eight_collection",
        "type": "collection",
        "label": "Eight Products Collection"
      }
    ],
    "presets": [
      {
        "name": "Eight Products",
        "category": "Products"
      }
    ]
  }
{% endschema %}
