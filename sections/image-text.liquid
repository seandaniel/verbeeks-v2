<section class="image-text-section">
  <div class="wrapper">
    <div class="image-text-container">
      <div class="text-icon-container">
        <div class="text-container">
          <h2>{{ section.settings.text_heading }}</h2>
          <p>{{ section.settings.text }}</p>
          <a class="button-reverse" href="{{ section.settings.link }} ">{{ section.settings.link_text }}</a>
        </div>
        <div class="svg-container">
          <img src="{{ section.settings.svg_icon | img_url: 'master' }}" alt="{{ img.alt }}">
        </div>
      </div>
      <img class="right-img" src="{{ section.settings.right_img | img_url: 'master' }}" alt="{{ img.alt }}">
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Image Text Section",
    "settings": [
      {
        "type": "text",
        "id": "text_heading",
        "label": "Image Text Heading",
        "default": "Heading"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Description Text",
        "default": "Description Text"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
      {
        "type": "textarea",
        "id": "link_text",
        "label": "Link Text"
      },
      {
        "type": "image_picker",
        "id": "svg_icon",
        "label": "Icon"
      },
      {
        "type": "image_picker",
        "id": "right_img",
        "label": "Right Image"
      }
    ],
    "presets": [
      {
        "name": "Image Text",
        "category": "Image Text"
      }
    ]
  }
{% endschema %}
