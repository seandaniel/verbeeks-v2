  {% for block in section.blocks %}
      {% case block.type %}
      {% when 'image_picker' %}
        <img src="{{ block.settings.image_id | img_url: 'master' }}" alt="{{ img.alt }}">
      {% endcase %}
  {% endfor %}


{% schema %}
{
  "name": "Image",
  "blocks" : [
    {
      "type": "image_picker",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_id",
          "label":  "Insert an Image" 
        }
      ]
    }
  ]
}
{% endschema %}