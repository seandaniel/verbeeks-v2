<div id="landscaping" class="h1-container">
  <div class="wrapper">
    <h1>{{ section.settings.main_heading }} </h1>
  </div>
</div>
<section class="landscape-image-container">
  <figure>
    <img src="{{ section.settings.img_1 | img_url: 'master' }}" alt="{{ img.alt }}" loading="lazy">
    <h2>{{ section.settings.img_heading_1 }}</h2>
  </figure>
  <figure>
    <img src="{{ section.settings.img_2 | img_url: 'master' }}" alt="{{ img.alt }}" loading="lazy">
    <h2>{{ section.settings.img_heading_2 }}</h2>
  </figure>
</section>
<div class="wrapper">
  <section class="landscaping-text-container">
    <div class="p-button-container">
      <p>{{ section.settings.landscape_text }}</p>
      <a href="{{ section.settings.button_link }}" class="button-reverse">{{ section.settings.button_link_label }}</a>
    </div>
    <div class="icon-container">
      <div class="svg-container">
        <div class="background-icon design-background"></div>
      </div>
      <h2 class="category">Design</h2>
    </div>
  </section>
</div>
<section class="landscape-image-container-2">
  <figure>
    <img src="{{ section.settings.img_3 | img_url: 'master' }}" alt="{{ img.alt }}" loading="lazy">
    <h2>{{ section.settings.img_heading_3 }}</h2>
  </figure>
  <figure>
    <img src="{{ section.settings.img_4 | img_url: 'master' }}" alt="{{ img.alt }}" loading="lazy">
    <h2>{{ section.settings.img_heading_4 }}</h2>
  </figure>
</section>

{% schema %}
  {
    "name": "Home Landscape",
    "settings": [
      {
      "type": "header",
      "content":"Landscape Text"
      },
      {
        "type": "text",
        "id": "main_heading",
        "label": "Main Heading",
        "default": "Landscaping"
      },
      {
        "type": "textarea",
        "id": "landscape_text",
        "label": "Landscape Description"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Landscape Page Link"
      },
      {
        "type": "text",
        "id": "button_link_label",
        "label": "Landscape Button Label"
      },
      {
        "type": "header",
        "content":"Landscape Images"
      },
      {
        "type": "image_picker",
        "id": "img_1",
        "label": "Landscape Image 1 (Landscape)"
      },
      {
        "type": "text",
        "id": "img_heading_1",
        "label": "Landscape Image 1 Heading"
      },
      {
        "type": "image_picker",
        "id": "img_2",
        "label": "Landscape Image 2 (Portrait)"
      },
      {
        "type": "text",
        "id": "img_heading_2",
        "label": "Landscape Image 2 Heading"
      },
      {
        "type": "image_picker",
        "id": "img_3",
        "label": "Landscape Image 3 (Landscape)"
      },
      {
        "type": "text",
        "id": "img_heading_3",
        "label": "Landscape Image 3 Heading"
      },
      {
        "type": "image_picker",
        "id": "img_4",
        "label": "Landscape Image 4 (Portrait)"
      },
      {
        "type": "text",
        "id": "img_heading_4",
        "label": "Landscape Image 3 Heading"
      }
    ],
    "presets": [
      {
        "name": "Home Landscape",
        "category": "Home Landscape"
      }
    ]
  }
{% endschema %}
