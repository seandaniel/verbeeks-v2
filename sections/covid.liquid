<div class="wrapper">
  <section class="covid-section">
    <div class="text-container">
      <h2>{{ section.settings.covid_heading }}</h2>
      <p>{{ section.settings.covid_text }}</p>
      <div class="svg-container">
        <img src="{{ 'mask.svg' | asset_url }}" alt="A person wearing a mask">
      </div>
      <a class="button" href="{{ section.settings.link }} ">{{ section.settings.link_text }}</a>
    </div>
    <img class="covid-img" src="{{ section.settings.covid_img | img_url: 'master' }}" alt="{{ img.alt }}">
  </section>
</div>

{% schema %}
  {
    "name": "COVID Section",
    "settings": [
      {
        "type": "text",
        "id": "covid_heading",
        "label": "COVID Heading",
        "default": "COVID Heading"
      },
      {
        "type": "text",
        "id": "covid_text",
        "label": "COVID Text",
        "default": "COVID Text "
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link Text"
      },
      {
        "type": "image_picker",
        "id": "covid_img",
        "label": "COVID Image"
      }
    ],
    "presets": [
      {
        "name": "COVID Store Guidelines Section",
        "category": "COVID"
      }
    ]
  }
{% endschema %}
