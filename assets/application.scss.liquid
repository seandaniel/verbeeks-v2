// variables
{{ settings.font_heading | font_face }};
{{ settings.font_body | font_face }};

$primaryColor: #0e0e0e;
$secondaryColor: #f4f4f4;
$tertiaryColor: #a9c53e;
$quaternaryColor: #fff;

// default styles
body {
  font-family: {{settings.font_heading.family}};
  color: $primaryColor;
  background-color: $quaternaryColor;
}

h1, h2, h3, h4, h5, h6 {
  font-family: {{settings.font_body.family}};
  margin: 0;
  font-weight: 400;
}

p {
  margin: 0;
  font-weight: 400;
}

ul {
  list-style-type: none;
  padding-left: 0;
  margin: 0;
}

a {
  text-decoration: none;
  color: inherit;
}

figure {
  margin: 0;
}

button {
  cursor: pointer;
  border: none;
  background-color: inherit;
  padding: 0;
}

.button {
  background-color: $secondaryColor;
  padding: 10px;
  box-shadow: 0 2px 4px rgba(0,0,0,.21);
  transition: color .35s, background-color .35s;
  &:hover,
  &:focus {
    background-color: $primaryColor;
    color: $secondaryColor;
  }
}

.wrapper {
  max-width: 1100px;
  width: 95%;
  margin: 0 auto;
}

// sections
// header

.secondary-nav ul {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  background: $tertiaryColor;
  width: 100%;
  padding: 10px 2.5%;
  li:first-child a {
    margin-right: calc(95.15px + 20px + 78.1499px - 35px);
    font-size: 40px;
  }
  li:nth-child(2)  {
    margin: 0 auto 0 auto;
    text-decoration: underline;
  }
  li:nth-child(3) a {
    margin-right: 20px;
    padding: 10px;
    i {
      margin-right: 10px;
    }
  }
  li:last-child i {
    margin-right: 10px;
  }
}

.secondary-nav ul li:nth-child(-n+2) a {
  transition: color .35s;
  &:hover,
  &:focus {
    color: $secondaryColor;
  }
}

.primary-nav {
  // .secondary-nav height
  padding-top: 66px;
  box-shadow: 0 2px 4px rgba(0,0,0,.21);
  margin-bottom: 1000px;
  background-color: $secondaryColor;
  ul {
    display: flex;
    justify-content: space-between;
    align-items: center;
    li img {
      display: inline-block;
      width: 200px;
      height: auto;
      object-fit:cover;
    }
  }
}

.primary-nav ul li a {
  transition: color .35s;
  &:hover,
  &:focus {
    color: $tertiaryColor;
  }
}

